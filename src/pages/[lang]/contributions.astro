<script>
  function initContributions() {
    const searchInput = document.getElementById(
      'contribution-search',
    ) as HTMLInputElement;
    const projectSelect = document.getElementById('project-select');
    const selectTrigger = projectSelect?.querySelector(
      '.select-trigger',
    ) as HTMLButtonElement;
    const selectOptions = projectSelect?.querySelectorAll('.select-option');
    const selectedText = document.getElementById('selected-project-text');

    const projectCards = document.querySelectorAll('.project-card');
    const showMoreBtns = document.querySelectorAll('.show-more-btn');
    const timelineItems = document.querySelectorAll('.timeline-item');

    let currentProject = 'all';

    // Custom Select Logic
    selectTrigger?.addEventListener('click', (e) => {
      e.stopPropagation();
      const isOpen = projectSelect?.classList.toggle('open');
      selectTrigger.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
    });

    document.addEventListener('click', () => {
      projectSelect?.classList.remove('open');
      selectTrigger?.setAttribute('aria-expanded', 'false');
    });

    selectOptions?.forEach((option) => {
      option.addEventListener('click', () => {
        const value = option.getAttribute('data-value') || 'all';
        currentProject = value;

        // Update UI
        selectOptions.forEach((opt) => opt.classList.remove('selected'));
        option.classList.add('selected');
        if (selectedText) selectedText.textContent = option.textContent;

        projectSelect?.classList.remove('open');
        selectTrigger?.setAttribute('aria-expanded', 'false');

        updateFilters();
      });
    });

    function updateFilters() {
      const searchTerm = searchInput?.value.toLowerCase() || '';
      const selectedProject = currentProject;

      projectCards.forEach((card) => {
        const project = card.getAttribute('data-project');
        const contributions = card.querySelectorAll('.contribution-item');
        const showMoreBtn = card.querySelector('.show-more-btn') as HTMLElement;

        let hasVisibleContributions = false;
        let visibleCount = 0;
        const isExpanded =
          showMoreBtn?.getAttribute('data-expanded') === 'true';

        contributions.forEach((item) => {
          const searchText = item.getAttribute('data-search-text') || '';
          const matchesSearch = searchText.includes(searchTerm);
          const matchesProject =
            selectedProject === 'all' || project === selectedProject;

          if (matchesSearch && matchesProject) {
            item.classList.remove('hidden-contribution');
            hasVisibleContributions = true;
            visibleCount++;

            if (
              !isExpanded &&
              visibleCount > 5 &&
              searchTerm === '' &&
              selectedProject === 'all'
            ) {
              item.classList.add('hidden-contribution');
            }
          } else {
            item.classList.add('hidden-contribution');
          }
        });

        if (hasVisibleContributions) {
          (card as HTMLElement).style.display = 'block';
          if (showMoreBtn) {
            // Hide show more button if we are filtering
            if (searchTerm !== '' || selectedProject !== 'all') {
              showMoreBtn.style.display = 'none';
            } else {
              showMoreBtn.style.display = 'block';
            }
          }
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });

      // Filter timeline items too
      timelineItems.forEach((item) => {
        const title =
          item.querySelector('.timeline-title')?.textContent?.toLowerCase() ||
          '';
        const project = item.getAttribute('data-project') || '';

        const matchesSearch = title.includes(searchTerm);
        const matchesProject =
          selectedProject === 'all' || project === selectedProject;

        if (matchesSearch && matchesProject) {
          (item as HTMLElement).style.display = 'block';
        } else {
          (item as HTMLElement).style.display = 'none';
        }
      });
    }

    searchInput?.addEventListener('input', updateFilters);

    showMoreBtns.forEach((btn) => {
      btn.addEventListener('click', () => {
        const card = btn.closest('.project-card');
        const list = card?.querySelector('[data-contributions-list]');
        const items = list?.querySelectorAll('.contribution-item');
        const isExpanded = btn.getAttribute('data-expanded') === 'true';

        if (isExpanded) {
          items?.forEach((item, index) => {
            if (index >= 5) item.classList.add('hidden-contribution');
          });
          btn.textContent = btn.getAttribute('data-show-more-text');
          btn.setAttribute('data-expanded', 'false');
          card?.scrollIntoView({ behavior: 'smooth', block: 'start' });
        } else {
          items?.forEach((item) =>
            item.classList.remove('hidden-contribution'),
          );
          btn.textContent = btn.getAttribute('data-show-less-text');
          btn.setAttribute('data-expanded', 'true');
        }
      });
    });
  }

  // Initialize on page load and after swaps
  initContributions();
  document.addEventListener('astro:after-swap', initContributions);
</script>
