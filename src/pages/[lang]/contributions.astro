---
import Layout from '@/layouts/Layout.astro';
import {
  projects,
  getAllContributions,
  getContributionStats,
} from '@/data/contributions';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import { languages } from '@/i18n/ui';

export async function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({
    params: { lang },
  }));
}
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const stats = getContributionStats();
const allContributions = getAllContributions();
---

<Layout
  title={t('contributions.page.title')}
  description={t('contributions.page.description')}
>
  <article class="contributions-page" itemscope itemtype="https://schema.org/CollectionPage">
    <meta itemprop="name" content={t('contributions.page.title')} />
    <meta itemprop="description" content={t('contributions.page.description')} />
    
    <header class="hero-section">
      <div class="container">
        <h1 class="hero-title" itemprop="headline">{t('contributions.hero.title')}</h1>
        <p class="hero-subtitle">
          {t('contributions.hero.subtitle')}
        </p>
      </div>
    </header>

    <section class="stats-section" aria-labelledby="stats-heading">
      <h2 id="stats-heading" class="visually-hidden">Contribution Statistics</h2>
      <div class="container">
        <div class="stats-grid" role="list">
          <div class="stat-card" role="listitem">
            <div class="stat-value" aria-label={`${stats.totalContributions} merged contributions`}>{stats.totalContributions}</div>
            <div class="stat-label">{t('contributions.stats.merged')}</div>
            <div class="stat-description">
              {t('contributions.stats.merged.desc')}
            </div>
          </div>
          <div class="stat-card" role="listitem">
            <div class="stat-value" aria-label={`${stats.totalProjects} open source projects`}>{stats.totalProjects}</div>
            <div class="stat-label">{t('contributions.stats.projects')}</div>
            <div class="stat-description">
              {t('contributions.stats.projects.desc')}
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="projects-section" aria-labelledby="projects-section-title">
      <div class="container">
        <h2 id="projects-section-title" class="section-title">{t('contributions.section.projects')}</h2>
        <div class="projects-list">
          {
            projects.map((project, index) => (
              <article class="project-card" id={project.name.toLowerCase()}>
                <div class="project-header">
                  <div class="project-title-row">
                    <h3 class="project-name">{project.name}</h3>
                    {project.stats?.category && (
                      <span class="project-category">
                        {project.stats.category}
                      </span>
                    )}
                  </div>
                  <p class="project-description">{project.description}</p>
                  <div class="project-meta">
                    <div class="tech-stack">
                      {project.technology.map((tech) => (
                        <span class="tech-badge">{tech}</span>
                      ))}
                    </div>
                    <div class="project-links">
                      <a
                        href={project.repository}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="project-link"
                        aria-label={`View ${project.name} repository on GitHub`}
                      >
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="18"
                          height="18"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          aria-hidden="true"
                        >
                          <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22" />
                        </svg>
                        {t('contributions.card.repository')}
                      </a>
                      {project.website &&
                        project.website !== project.repository && (
                          <a
                            href={project.website}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="project-link"
                          >
                            <svg
                              xmlns="http://www.w3.org/2000/svg"
                              width="18"
                              height="18"
                              viewBox="0 0 24 24"
                              fill="none"
                              stroke="currentColor"
                              stroke-width="2"
                              stroke-linecap="round"
                              stroke-linejoin="round"
                            >
                              <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71" />
                              <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71" />
                            </svg>
                            {t('contributions.card.website')}
                          </a>
                        )}
                    </div>
                  </div>
                </div>

                <div class="contributions-section">
                  <h4 class="contributions-title">
                    {project.contributions.length}{' '}
                    {project.contributions.length === 1
                      ? t('contributions.card.contributions')
                      : t('contributions.card.contributions_plural')}
                  </h4>
                  <div class="contributions-list">
                    {project.contributions.map((contribution, index) => (
                      <div class="contribution-item">
                        <div class="contribution-number">
                          {String(index + 1).padStart(2, '0')}
                        </div>
                        <div class="contribution-content">
                          <div class="contribution-header-row">
                            <h5 class="contribution-title">
                              {contribution.title}
                            </h5>
                            <time class="contribution-date">
                              {new Date(contribution.date).toLocaleDateString(
                                lang,
                                {
                                  year: 'numeric',
                                  month: 'short',
                                },
                              )}
                            </time>
                          </div>
                          <p class="contribution-description">
                            {contribution.description}
                          </p>
                          {contribution.impact && (
                            <div class="contribution-impact">
                              <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="16"
                                height="16"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                              >
                                <polyline points="22 12 18 12 15 21 9 3 6 12 2 12" />
                              </svg>
                              <span>{contribution.impact}</span>
                            </div>
                          )}
                          <div class="contribution-footer">
                            {contribution.tags && (
                              <div class="contribution-tags">
                                {contribution.tags.map((tag) => (
                                  <span class="tag">{tag}</span>
                                ))}
                              </div>
                            )}
                            {contribution.prLink && (
                              <a
                                href={contribution.prLink}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="pr-link"
                              >
                                <svg
                                  xmlns="http://www.w3.org/2000/svg"
                                  width="16"
                                  height="16"
                                  viewBox="0 0 24 24"
                                  fill="none"
                                  stroke="currentColor"
                                  stroke-width="2"
                                  stroke-linecap="round"
                                  stroke-linejoin="round"
                                >
                                  <circle cx="18" cy="18" r="3" />
                                  <circle cx="6" cy="6" r="3" />
                                  <path d="M13 6h3a2 2 0 0 1 2 2v7" />
                                  <line x1="6" y1="9" x2="6" y2="21" />
                                </svg>
                                {t('contributions.card.viewPR')}
                              </a>
                            )}
                          </div>
                        </div>
                      </div>
                    ))}
                  </div>
                </div>
              </article>
            ))
          }
        </div>
      </div>
    </section>

    <section class="timeline-section" aria-labelledby="timeline-section-title">
      <div class="container">
        <h2 id="timeline-section-title" class="section-title">{t('contributions.section.timeline')}</h2>
        <div class="timeline" role="list">
          {
            allContributions.map((contribution) => (
              <div class="timeline-item" role="listitem">
                <div class="timeline-marker" aria-hidden="true" />
                <div class="timeline-content">
                  <time class="timeline-date">
                    {new Date(contribution.date).toLocaleDateString(lang, {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric',
                    })}
                  </time>
                  <h5 class="timeline-title">{contribution.title}</h5>
                  <div class="timeline-project">
                    <a
                      href={`#${contribution.projectName.toLowerCase()}`}
                      class="project-badge"
                    >
                      {contribution.projectName}
                    </a>
                  </div>
                  {contribution.prLink && (
                    <a
                      href={contribution.prLink}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="timeline-link"
                    >
                      {t('contributions.timeline.viewPR')}
                    </a>
                  )}
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>
  </article>
</Layout>

<style>
  .contributions-page {
    padding-top: var(--nav-height);
  }

  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  main {
    padding-top: var(--nav-height);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Hero Section */
  .hero-section {
    padding: 4rem 0 3rem;
    text-align: center;
  }

  .hero-title {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    background: linear-gradient(
      135deg,
      var(--color-primary),
      var(--color-accent)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.8;
  }

  /* Stats Section */
  .stats-section {
    padding: 3rem 0 4rem;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .stat-card {
    background: var(--color-card-bg);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    padding: 2.5rem;
    text-align: center;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .stat-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 40px rgba(124, 58, 237, 0.15);
    border-color: var(--color-primary);
  }

  .stat-value {
    font-size: 3.5rem;
    font-weight: 700;
    background: linear-gradient(
      135deg,
      var(--color-primary),
      var(--color-accent)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.75rem;
    line-height: 1;
  }

  .stat-label {
    font-size: 0.9rem;
    color: var(--color-text);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
  }

  .stat-description {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    line-height: 1.5;
  }

  /* Projects Section */
  .projects-section {
    padding: 3rem 0 5rem;
  }

  .section-title {
    font-size: 2.5rem;
    margin-bottom: 3rem;
    background: linear-gradient(
      to right,
      var(--color-text),
      var(--color-text-muted)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    display: inline-block;
  }

  .projects-list {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .project-card {
    background: var(--color-card-bg);
    border: 1px solid var(--color-border);
    border-radius: 20px;
    padding: 3rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    scroll-margin-top: calc(var(--nav-height) + 2rem);
  }

  .project-card:hover {
    box-shadow: 0 12px 40px rgba(124, 58, 237, 0.12);
    border-color: rgba(124, 58, 237, 0.3);
  }

  .project-header {
    margin-bottom: 2.5rem;
    padding-bottom: 2rem;
    border-bottom: 2px solid var(--color-border);
  }

  .project-title-row {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .project-name {
    font-size: 2rem;
    font-weight: 700;
    margin: 0;
    color: var(--color-text);
  }

  .project-category {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-primary);
    background: rgba(124, 58, 237, 0.1);
    padding: 0.375rem 0.875rem;
    border-radius: 8px;
  }

  .project-description {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    line-height: 1.7;
    margin: 0 0 1.5rem 0;
  }

  .project-meta {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .tech-stack {
    display: flex;
    flex-wrap: wrap;
    gap: 0.625rem;
  }

  .tech-badge {
    font-size: 0.875rem;
    color: var(--color-text);
    background: rgba(124, 58, 237, 0.08);
    border: 1px solid var(--color-border);
    padding: 0.375rem 0.875rem;
    border-radius: 8px;
    font-weight: 500;
  }

  .project-links {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.95rem;
    color: var(--color-primary);
    font-weight: 600;
    transition: all 0.2s;
  }

  .project-link:hover {
    color: var(--color-secondary);
    transform: translateX(3px);
  }

  .contributions-section {
    margin-top: 2rem;
  }

  .contributions-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 1.5rem 0;
  }

  .contributions-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .contribution-item {
    display: flex;
    gap: 1.5rem;
    padding: 1.5rem;
    background: rgba(124, 58, 237, 0.02);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    transition: all 0.2s;
  }

  .contribution-item:hover {
    background: rgba(124, 58, 237, 0.05);
    border-color: var(--color-primary);
  }

  .contribution-number {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-primary);
    opacity: 0.6;
    flex-shrink: 0;
    width: 3rem;
    text-align: center;
  }

  .contribution-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.875rem;
  }

  .contribution-header-row {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
  }

  .contribution-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
    flex: 1;
  }

  .contribution-date {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    white-space: nowrap;
    font-weight: 500;
  }

  .contribution-description {
    font-size: 0.95rem;
    color: var(--color-text-muted);
    line-height: 1.7;
    margin: 0;
  }

  .contribution-impact {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    font-size: 0.875rem;
    color: var(--color-accent);
    font-weight: 600;
    background: rgba(37, 99, 235, 0.08);
    padding: 0.75rem 1rem;
    border-radius: 8px;
    border-left: 3px solid var(--color-accent);
  }

  .contribution-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 0.5rem;
  }

  .contribution-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    background: var(--color-card-bg);
    padding: 0.25rem 0.625rem;
    border-radius: 6px;
    border: 1px solid var(--color-border);
    font-weight: 500;
  }

  .pr-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--color-primary);
    font-weight: 600;
    transition: all 0.2s;
  }

  .pr-link:hover {
    color: var(--color-secondary);
    transform: translateX(3px);
  }

  /* Timeline Section */
  .timeline-section {
    padding: 4rem 0 6rem;
    background: var(--color-card-bg);
  }

  .timeline {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
    padding-left: 2rem;
  }

  .timeline::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--color-border);
  }

  .timeline-item {
    position: relative;
    margin-bottom: 3rem;
    padding-left: 2rem;
  }

  .timeline-marker {
    position: absolute;
    left: -0.5rem;
    top: 0.5rem;
    width: 1rem;
    height: 1rem;
    background: var(--color-primary);
    border: 3px solid var(--color-bg);
    border-radius: 50%;
    box-shadow: 0 0 0 2px var(--color-primary);
  }

  .timeline-content {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 1.5rem;
    transition: all 0.2s;
  }

  .timeline-content:hover {
    border-color: var(--color-primary);
    box-shadow: 0 4px 20px rgba(124, 58, 237, 0.1);
  }

  .timeline-date {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    font-weight: 600;
    display: block;
    margin-bottom: 0.5rem;
  }

  .timeline-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 0.75rem 0;
  }

  .timeline-project {
    margin-bottom: 0.75rem;
  }

  .project-badge {
    font-size: 0.8rem;
    color: var(--color-primary);
    background: rgba(124, 58, 237, 0.1);
    padding: 0.25rem 0.75rem;
    border-radius: 6px;
    font-weight: 600;
    display: inline-block;
    transition: all 0.2s;
  }

  .project-badge:hover {
    background: rgba(124, 58, 237, 0.2);
    transform: translateX(2px);
  }

  .timeline-link {
    font-size: 0.875rem;
    color: var(--color-primary);
    font-weight: 600;
    transition: all 0.2s;
  }

  .timeline-link:hover {
    color: var(--color-secondary);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.125rem;
    }

    .stats-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .stat-card {
      padding: 2rem;
    }

    .stat-value {
      font-size: 2.5rem;
    }

    .project-card {
      padding: 2rem;
    }

    .project-name {
      font-size: 1.5rem;
    }

    .project-description {
      font-size: 1rem;
    }

    .contribution-item {
      flex-direction: column;
      gap: 1rem;
    }

    .contribution-number {
      width: auto;
      text-align: left;
    }

    .contribution-header-row {
      flex-direction: column;
      gap: 0.5rem;
    }

    .timeline {
      padding-left: 1.5rem;
    }

    .timeline-item {
      padding-left: 1.5rem;
    }
  }
</style>
