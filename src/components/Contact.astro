---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import GithubIcon from '@/assets/github.svg';
import MailIcon from '@/assets/mail.svg';
import LinkedinIcon from '@/assets/linkedin.svg';
import { github, linkedin, mail } from '@/settings';
import ContactForm from './ContactForm.astro';
import LeafletMap from './LeafletMap.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const links = [
  {
    href: `mailto:${mail}`,
    icon: MailIcon,
    label: t('contact.email'),
    value: mail,
  },
  {
    href: `https://github.com/${github}`,
    icon: GithubIcon,
    label: t('contact.github'),
    value: `@${github}`,
  },
  {
    href: `https://www.linkedin.com/in/${linkedin}`,
    icon: LinkedinIcon,
    value: t('contact.linkedin'),
  },
];
---

<section id="contact" class="section">
  <div class="container">
    <h2 class="section-title">{t('contact.title')}</h2>

    <div class="grid-layout">
      <div class="contact-info">
        <p class="text">
          {t('contact.text')}
        </p>

        <div class="links">
          {
            links.map(({ href, icon: Icon, label, value }) => (
              <a
                href={href}
                target={href.startsWith('http') ? '_blank' : undefined}
                rel={
                  href.startsWith('http') ? 'noopener noreferrer' : undefined
                }
                class="link-item"
              >
                <div class="link-icon">
                  <Icon />
                </div>
                <div class="link-content">
                  {label && <span class="label">{label}</span>}
                  <span class="value">{value}</span>
                </div>
              </a>
            ))
          }
        </div>
      </div>

      <div class="form-container">
        <h3 class="form-title">{t('contact.form.title')}</h3>
        <p class="form-description">{t('contact.form.description')}</p>
        <ContactForm />
      </div>
    </div>

    <div class="map-section">
      <LeafletMap />
    </div>
  </div>
</section>

<style>
  .section {
    padding: 6rem 0 8rem;
  }

  .grid-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    margin-bottom: 4rem;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
  }

  .text {
    font-size: 1.5rem;
    line-height: unset;
    margin-bottom: 0.5rem;
    color: var(--color-text);
    font-weight: 600;
  }

  .links {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-top: 2rem;
    flex: 1;
  }

  .link-item {
    display: flex;
    align-items: center;
    gap: 1.25rem;
    padding: 1.5rem;
    background: var(--color-card-bg);
    border: 1px solid var(--color-border);
    border-radius: 1rem;
    transition: all 0.3s ease;
    height: 100%;
  }

  .link-item:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: var(--color-text);
    transform: translateX(4px);
  }

  .link-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .link-icon :global(svg) {
    width: 24px;
    height: 24px;
  }

  .link-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    flex: 1;
  }

  .label {
    font-weight: 600;
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }

  .value {
    color: var(--color-text);
    font-weight: 500;
    font-size: 1.125rem;
  }

  .form-container {
    display: flex;
    flex-direction: column;
  }

  .form-title {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }

  .form-description {
    color: var(--color-text-muted);
    margin-bottom: 2rem;
    font-size: 1rem;
  }

  .map-section {
    height: 400px;
    width: 100%;
    margin-top: 4rem;
  }

  @media (max-width: 900px) {
    .grid-layout {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
  }

  @media (max-width: 600px) {
    .link-item {
      padding: 1.25rem;
    }

    .link-icon {
      width: 40px;
      height: 40px;
    }

    .value {
      font-size: 1rem;
    }
  }
</style>
