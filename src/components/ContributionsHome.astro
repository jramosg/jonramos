---
import { Image } from 'astro:assets';
import {
  projects,
  getContributionStats,
  getContributionsByTier,
} from '@/data/contributions';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

import cljKondoLogo from '@/assets/clj-kondo.png';
import calvaLogo from '@/assets/calva.png';
import logseqLogo from '@/assets/logseq.png';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const stats = getContributionStats();

const projectLogos: Record<string, any> = {
  'clj-kondo': cljKondoLogo,
  Calva: calvaLogo,
  Logseq: logseqLogo,
};
---

<section
  id="contributions"
  class="section"
  aria-labelledby="contributions-title"
>
  <div class="container">
    <header class="section-header">
      <h2 id="contributions-title" class="section-title">
        {t('contributions.hero.title')}
      </h2>
      <p class="section-subtitle">
        Building and improving developer tools through open source
      </p>
    </header>

    <div class="stats-row" role="list" aria-label="Contribution statistics">
      <div class="stat-item" role="listitem">
        <span class="stat-value">{stats.totalContributions}</span>
        <span class="stat-label">{t('contributions.stats.contributions')}</span>
      </div>
      <div class="stat-divider"></div>
      <div class="stat-item" role="listitem">
        <span class="stat-value">{stats.totalProjects}</span>
        <span class="stat-label">{t('contributions.stats.projects')}</span>
      </div>
      <div class="stat-divider"></div>
      <div class="stat-item featured-stat" role="listitem">
        <span class="stat-value">{stats.featured}</span>
        <span class="stat-label">Featured</span>
      </div>
    </div>

    <div class="projects-grid" itemscope itemtype="https://schema.org/ItemList">
      <meta itemprop="name" content="Open Source Contributions" />
      {
        projects.map((project) => {
          const { featured, notable } = getContributionsByTier(
            project.contributions,
          );
          // Show up to 2 featured contributions, or 1 notable if no featured
          const previewContributions =
            featured.length > 0 ? featured.slice(0, 3) : notable.slice(0, 3);
          const remainingCount =
            project.contributions.length - previewContributions.length;

          return (
            <article class="project-card">
              <div class="project-header">
                <div class="project-name-wrapper">
                  {projectLogos[project.name] && (
                    <Image
                      src={projectLogos[project.name]}
                      alt={`${project.name} logo`}
                      class="project-logo"
                      loading="lazy"
                    />
                  )}
                  <div>
                    <h3 class="project-name">
                      <span class="name-prefix">#</span>
                      {project.name}
                    </h3>
                    <span class="project-tech">{project.technology[0]}</span>
                  </div>
                </div>
                <div class="contribution-badges">
                  <span class="contribution-count">
                    {project.contributions.length}
                  </span>
                  {featured.length > 0 && (
                    <span class="featured-badge">
                      <span class="badge-icon">★</span>
                      {featured.length}
                    </span>
                  )}
                </div>
              </div>

              <div class="contributions-preview">
                {previewContributions.map((contribution) => (
                  <a
                    href={contribution.prLink}
                    target="_blank"
                    rel="noopener noreferrer"
                    class={`contribution-item ${contribution.tier === 'featured' ? 'is-featured' : ''}`}
                  >
                    {contribution.tier === 'featured' && (
                      <span class="featured-indicator">★</span>
                    )}
                    <div class="contribution-content">
                      <h4 class="contribution-title">{contribution.title}</h4>
                      {contribution.impact && (
                        <p class="contribution-impact">{contribution.impact}</p>
                      )}
                    </div>
                    <span class="contribution-arrow">
                      <svg
                        width="14"
                        height="14"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                      >
                        <line x1="7" y1="17" x2="17" y2="7" />
                        <polyline points="7 7 17 7 17 17" />
                      </svg>
                    </span>
                  </a>
                ))}

                {remainingCount > 0 && (
                  <a href={`/${lang}/contributions`} class="more-link">
                    <span>+{remainingCount} more contributions</span>
                    <svg
                      width="14"
                      height="14"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <line x1="5" y1="12" x2="19" y2="12" />
                      <polyline points="12 5 19 12 12 19" />
                    </svg>
                  </a>
                )}
              </div>
            </article>
          );
        })
      }
    </div>

    <div class="see-more-container">
      <a href={`/${lang}/contributions`} class="see-more-btn">
        <span class="btn-text">{t('contributions.home.viewAll')}</span>
        <span class="btn-icon">
          <svg
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </span>
      </a>
    </div>
  </div>
</section>

<style>
  .section {
    padding: 6rem 0;
  }

  .section-header {
    margin-bottom: 2rem;
  }

  .section-title {
    font-family: var(--font-mono);
    font-size: 2rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 0.75rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .section-title::before {
    content: '//';
    color: var(--color-primary);
    font-weight: 400;
  }

  .section-subtitle {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    margin: 0;
  }

  /* Stats Row */
  .stats-row {
    display: flex;
    align-items: center;
    gap: 2rem;
    margin-bottom: 2.5rem;
    padding: 1.25rem 1.75rem;
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    width: fit-content;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .stat-value {
    font-family: var(--font-mono);
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-primary);
  }

  .featured-stat .stat-value {
    color: var(--color-featured);
  }

  .stat-label {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .stat-divider {
    width: 1px;
    height: 36px;
    background: var(--color-border);
  }

  /* Projects Grid */
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(min(100%, 400px), 1fr));
    gap: 1.25rem;
    margin-bottom: 2.5rem;
  }

  .project-card {
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 1.5rem;
    transition: all 0.25s var(--ease-out-expo);
    display: flex;
    flex-direction: column;
  }

  .project-card:hover {
    border-color: var(--color-border-emphasis);
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1.25rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--color-border);
  }

  .project-name-wrapper {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex: 1;
  }

  .project-logo {
    height: 32px;
    width: auto;
    max-width: 80px;
    object-fit: contain;
    filter: grayscale(20%);
    transition: filter 0.2s;
  }

  .project-card:hover .project-logo {
    filter: grayscale(0%);
  }

  .project-name {
    font-family: var(--font-mono);
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .name-prefix {
    color: var(--color-primary);
  }

  .project-tech {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--color-text-subtle);
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .contribution-badges {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .contribution-count {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--color-text-muted);
    background: var(--color-bg-surface);
    padding: 0.25rem 0.625rem;
    border-radius: 4px;
    border: 1px solid var(--color-border);
  }

  .featured-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-featured);
    background: rgba(210, 168, 255, 0.1);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  .badge-icon {
    font-size: 0.65rem;
  }

  /* Contributions Preview */
  .contributions-preview {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    flex: 1;
  }

  .contribution-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    padding: 0.875rem;
    border-radius: 6px;
    background: var(--color-bg-surface);
    border: 1px solid transparent;
    transition: all 0.2s;
    text-decoration: none;
  }

  .contribution-item:hover {
    border-color: var(--color-border);
    background: var(--color-bg);
  }

  .contribution-item.is-featured {
    border-left: 2px solid var(--color-featured);
    background: rgba(210, 168, 255, 0.03);
  }

  .contribution-item.is-featured:hover {
    border-color: var(--color-featured);
    border-left: 2px solid var(--color-featured);
  }

  .featured-indicator {
    color: var(--color-featured);
    font-size: 0.7rem;
    margin-top: 0.125rem;
  }

  .contribution-content {
    flex: 1;
    min-width: 0;
  }

  .contribution-title {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 0.25rem 0;
    line-height: 1.3;
  }

  .contribution-impact {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    margin: 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .contribution-arrow {
    color: var(--color-text-subtle);
    opacity: 0;
    transform: translateX(-4px);
    transition: all 0.2s;
    flex-shrink: 0;
  }

  .contribution-item:hover .contribution-arrow {
    opacity: 1;
    transform: translateX(0);
    color: var(--color-primary);
  }

  .more-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--color-text-muted);
    padding: 0.5rem 0;
    margin-top: auto;
    transition: color 0.2s;
  }

  .more-link:hover {
    color: var(--color-primary);
  }

  .more-link svg {
    transition: transform 0.2s;
  }

  .more-link:hover svg {
    transform: translateX(4px);
  }

  /* See More Button */
  .see-more-container {
    display: flex;
    justify-content: center;
  }

  .see-more-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.875rem 1.5rem;
    font-family: var(--font-mono);
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--color-text);
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: 6px;
    transition: all 0.25s var(--ease-out-expo);
  }

  .see-more-btn:hover {
    border-color: var(--color-primary);
    transform: translateY(-2px);
  }

  .btn-icon {
    color: var(--color-primary);
    transition: transform 0.2s;
  }

  .see-more-btn:hover .btn-icon {
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .section {
      padding: 4rem 0;
    }

    .section-title {
      font-size: 1.5rem;
    }

    .stats-row {
      flex-wrap: wrap;
      gap: 1.25rem;
      padding: 1rem 1.25rem;
      width: 100%;
      justify-content: center;
    }

    .stat-divider {
      display: none;
    }

    .stat-value {
      font-size: 1.5rem;
    }

    .projects-grid {
      grid-template-columns: 1fr;
    }

    .project-card {
      padding: 1.25rem;
    }

    .project-logo {
      height: 28px;
    }

    .project-name {
      font-size: 1rem;
    }
  }
</style>
