---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import GithubIcon from '@/assets/github.svg';
import LinkedinIcon from '@/assets/linkedin.svg';
import MailIcon from '@/assets/mail.svg';
import { github, linkedin, mail } from '@/settings';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();

const socials = [
  { icon: GithubIcon, href: `https://github.com/${github}`, label: 'GitHub' },
  {
    icon: LinkedinIcon,
    href: `https://linkedin.com/in/${linkedin}`,
    label: 'LinkedIn',
  },
  { icon: MailIcon, href: `mailto:${mail}`, label: 'Email' },
];
---

<footer class="footer" role="contentinfo" itemscope itemtype="https://schema.org/WPFooter">
  <div class="container">
    <div class="content">
      <div class="footer-left">
        <p>
          <small>&copy; {currentYear} <span itemprop="copyrightHolder">Jon Ramos</span>. {t('footer.rights')}</small>
        </p>
        <p class="tagline">
          <small>Senior Software Engineer | Full Stack Developer | Available for Hire</small>
        </p>
      </div>

      <nav class="social-links" aria-label="Social media links">
        {
          socials.map((social) => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer me"
              class="social-icon"
              aria-label={`Connect on ${social.label}`}
              title={`Follow Jon Ramos on ${social.label}`}
            >
              <social.icon aria-hidden="true" />
            </a>
          ))
        }
      </nav>
    </div>
  </div>
</footer>

<style>
  .footer {
    padding: 3rem 0;
    border-top: 1px solid var(--color-border);
    background: var(--color-bg);
  }

  .content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-left {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .footer-left p {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    margin: 0;
  }

  .tagline {
    color: var(--color-text-muted);
    font-size: 0.75rem;
    margin-top: 0.25rem;
    opacity: 0.8;
  }

  .social-links {
    display: flex;
    gap: 0.75rem;
  }

  .social-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid var(--color-border);
    color: var(--color-text-muted);
    transition: all 0.2s;
  }

  .social-icon:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: var(--color-text);
    color: var(--color-text);
    transform: translateY(-2px);
  }

  .social-icon :global(svg) {
    width: 18px;
    height: 18px;
  }

  @media (max-width: 600px) {
    .content {
      flex-direction: column;
      gap: 2rem;
      text-align: center;
    }

    .footer-left {
      align-items: center;
    }
  }
</style>
