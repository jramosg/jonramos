---
import { projects, getContributionStats } from '@/data/contributions';
import ProjectContributionCard from './ProjectContributionCard.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const stats = getContributionStats();
---

<section id="contributions" class="section">
  <div class="container">
    <header class="section-header">
      <h2 class="section-title">{t('contributions.hero.title')}</h2>
      <p class="section-subtitle">
        {
          t('contributions.section.subtitle')
            .replace('{projects}', String(stats.totalProjects))
            .replace('{contributions}', String(stats.totalContributions))
            .replace('{technologies}', stats.technologies.join(', '))
        }
      </p>
    </header>

    <div class="stats-row">
      <div class="stat-item">
        <span class="stat-value">{stats.totalContributions}</span>
        <span class="stat-label">{t('contributions.stats.merged')}</span>
      </div>
      <div class="stat-divider"></div>
      <div class="stat-item">
        <span class="stat-value">{stats.totalProjects}</span>
        <span class="stat-label">{t('contributions.stats.projects')}</span>
      </div>
      <div class="stat-divider"></div>
      <div class="stat-item">
        <span class="stat-value">{stats.featured}</span>
        <span class="stat-label">Featured</span>
      </div>
    </div>

    <div class="projects-grid">
      {
        projects.map((project) => (
          <ProjectContributionCard project={project} lang={lang} />
        ))
      }
    </div>
  </div>
</section>

<style>
  .section {
    padding: 6rem 0;
  }

  .section-header {
    margin-bottom: 3rem;
  }

  .section-title {
    font-family: var(--font-mono);
    font-size: 2rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .section-title::before {
    content: '//';
    color: var(--color-primary);
    font-weight: 400;
  }

  .section-subtitle {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    max-width: 700px;
    line-height: 1.6;
  }

  .stats-row {
    display: flex;
    align-items: center;
    gap: 2rem;
    margin-bottom: 3rem;
    padding: 1.5rem 2rem;
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    width: fit-content;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .stat-value {
    font-family: var(--font-mono);
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-primary);
  }

  .stat-label {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .stat-divider {
    width: 1px;
    height: 40px;
    background: var(--color-border);
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(min(100%, 520px), 1fr));
    gap: 1.5rem;
  }

  @media (max-width: 768px) {
    .section {
      padding: 4rem 0;
    }

    .section-title {
      font-size: 1.5rem;
    }

    .section-subtitle {
      font-size: 1rem;
    }

    .stats-row {
      flex-wrap: wrap;
      gap: 1.5rem;
      padding: 1.25rem 1.5rem;
      width: 100%;
      justify-content: center;
    }

    .stat-divider {
      display: none;
    }

    .stat-value {
      font-size: 1.75rem;
    }

    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
