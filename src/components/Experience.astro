---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="experience" class="section" aria-labelledby="experience-title">
  <div class="container">
    <header class="section-header">
      <h2 id="experience-title" class="section-title">
        {t('experience.title')}
      </h2>
    </header>

    <div
      class="timeline"
      role="list"
      itemscope
      itemtype="https://schema.org/ItemList"
    >
      <meta itemprop="numberOfItems" content="1" />
      <article
        class="timeline-item"
        role="listitem"
        itemprop="itemListElement"
        itemscope
        itemtype="https://schema.org/OrganizationRole"
      >
        <meta itemprop="position" content="1" />

        <div class="timeline-marker">
          <span class="marker-dot"></span>
          <span class="marker-line"></span>
        </div>

        <div class="timeline-card">
          <div class="card-header">
            <time datetime="2016-09" class="timeline-date" itemprop="startDate">
              <span class="date-prefix">since</span> Sep 2016
            </time>
            <span class="status-badge">
              <span class="status-dot"></span>
              {t('experience.present')}
            </span>
          </div>

          <h3 class="role" itemprop="roleName">{t('experience.role')}</h3>

          <a
            href="https://ubikare.io/"
            target="_blank"
            rel="noopener noreferrer"
            class="company"
            itemprop="memberOf"
            itemscope
            itemtype="https://schema.org/Organization"
            aria-label="Ubikare company website (opens in new tab)"
          >
            <span class="company-at">@</span>
            <span itemprop="name">Ubikare</span>
            <svg
              class="company-arrow"
              width="12"
              height="12"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <line x1="7" y1="17" x2="17" y2="7"></line>
              <polyline points="7 7 17 7 17 17"></polyline>
            </svg>
            <meta itemprop="url" content="https://ubikare.io/" />
          </a>

          <p class="description" itemprop="description">
            {t('experience.ubikare_desc')}
          </p>

          <ul class="tags" aria-label="Technologies used">
            <li><span>Clojure</span></li>
            <li><span>ClojureScript</span></li>
            <li><span>Datomic</span></li>
          </ul>
        </div>
      </article>
    </div>
  </div>
</section>

<style>
  .section {
    padding: 6rem 0;
  }

  .section-header {
    margin-bottom: 3rem;
  }

  .section-title {
    font-family: var(--font-mono);
    font-size: 2rem;
    font-weight: 600;
    color: var(--color-text);
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .section-title::before {
    content: '//';
    color: var(--color-primary);
    font-weight: 400;
  }

  .timeline {
    position: relative;
    max-width: 700px;
  }

  .timeline-item {
    display: flex;
    gap: 1.5rem;
  }

  .timeline-marker {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 0.5rem;
  }

  .marker-dot {
    width: 12px;
    height: 12px;
    background: var(--color-primary);
    border-radius: 50%;
    box-shadow: 0 0 0 4px var(--color-primary-muted);
    flex-shrink: 0;
  }

  .marker-line {
    width: 2px;
    flex: 1;
    background: linear-gradient(to bottom, var(--color-primary), transparent);
    margin-top: 0.5rem;
  }

  .timeline-card {
    flex: 1;
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 1.5rem;
  }

  .card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .timeline-date {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--color-text-muted);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .date-prefix {
    color: var(--color-text-subtle);
    text-transform: lowercase;
  }

  .status-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-primary);
    background: var(--color-primary-muted);
    padding: 0.25rem 0.75rem;
    border-radius: 100px;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .status-dot {
    width: 6px;
    height: 6px;
    background: var(--color-primary);
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.4;
    }
  }

  .role {
    font-family: var(--font-mono);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 0.5rem 0;
  }

  .company {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-family: var(--font-mono);
    font-size: 1rem;
    color: var(--color-secondary);
    margin-bottom: 1rem;
    transition: all 0.2s;
  }

  .company-at {
    color: var(--color-text-subtle);
  }

  .company-arrow {
    opacity: 0;
    transform: translateX(-4px);
    transition: all 0.2s;
  }

  .company:hover {
    color: var(--color-text);
  }

  .company:hover .company-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  .description {
    font-size: 1rem;
    color: var(--color-text-muted);
    line-height: 1.7;
    margin: 0 0 1.25rem 0;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    list-style: none;
    padding: 0;
    margin: 0;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border);
  }

  .tags li {
    display: contents;
  }

  .tags span {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    padding: 0.25rem 0.625rem;
    background: var(--color-bg-surface);
    border: 1px solid var(--color-border);
    border-radius: 4px;
    color: var(--color-text-muted);
  }

  @media (max-width: 768px) {
    .section {
      padding: 4rem 0;
    }

    .section-title {
      font-size: 1.5rem;
    }

    .timeline-marker {
      display: none;
    }

    .timeline-card {
      padding: 1.25rem;
    }

    .card-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
</style>
