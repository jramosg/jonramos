---
import type { Project } from '@/data/contributions';
import { getContributionsByTier } from '@/data/contributions';
import { getLangFromUrl  } from '@/i18n/utils';
import type { Langs } from '@/i18n/ui';

interface Props {
  project: Project;
  lang?: string;
}

const { project, lang: propLang } = Astro.props;
const lang = (propLang || getLangFromUrl(Astro.url)) as Langs;

const { featured, notable, minor } = getContributionsByTier(
  project.contributions,
);
---

<article class="project-card">
  <header class="project-header">
    <div class="project-title-row">
      <h3 class="project-name">
        <span class="name-prefix">#</span>
        {project.name}
      </h3>
      {
        project.stats?.category && (
          <span class="project-category">{project.stats.category}</span>
        )
      }
    </div>

    <p class="project-description">{project.description}</p>

    <div class="project-meta">
      <div class="tech-stack">
        {
          project.technology.map((tech) => (
            <span class="tech-badge">{tech}</span>
          ))
        }
      </div>

      <div class="project-links">
        <a
          href={project.repository}
          target="_blank"
          rel="noopener noreferrer"
          class="project-link"
          aria-label={`Visit ${project.name} repository`}
        >
          <svg
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"
            ></path>
          </svg>
          repo
        </a>
        {
          project.website && project.website !== project.repository && (
            <a
              href={project.website}
              target="_blank"
              rel="noopener noreferrer"
              class="project-link"
              aria-label={`Visit ${project.name} website`}
            >
              <svg
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71" />
                <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71" />
              </svg>
              site
            </a>
          )
        }
      </div>
    </div>

    <div class="contribution-summary">
      <span class="summary-total"
        >{project.contributions.length} contributions</span
      >
      {
        featured.length > 0 && (
          <span class="summary-featured">{featured.length} featured</span>
        )
      }
    </div>
  </header>

  <div class="contributions-container">
    {/* Featured Contributions - Hero treatment */}
    {
      featured.length > 0 && (
        <div class="tier-section featured-section">
          <div class="tier-label">
            <span class="tier-icon">★</span>
            Featured
          </div>
          <ul class="contributions-list featured-list">
            {featured.map((contribution) => (
              <li class="contribution-item featured">
                <a
                  class="contribution-link"
                  href={contribution.prLink}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <div class="contribution-glow" />
                  <div class="contribution-header">
                    <h4 class="contribution-title">{contribution.title}</h4>
                    <time class="contribution-date">
                      {new Date(contribution.date).toLocaleDateString(lang, {
                        year: 'numeric',
                        month: 'short',
                      })}
                    </time>
                  </div>
                  <p class="contribution-description">
                    {contribution.description}
                  </p>
                  {contribution.impact && (
                    <div class="contribution-impact">
                      <svg
                        width="14"
                        height="14"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                      >
                        <polyline points="22 12 18 12 15 21 9 3 6 12 2 12" />
                      </svg>
                      <span>{contribution.impact}</span>
                    </div>
                  )}
                  {contribution.tags && (
                    <div class="contribution-tags">
                      {contribution.tags.slice(0, 4).map((tag) => (
                        <span class="tag">{tag}</span>
                      ))}
                    </div>
                  )}
                  <span class="pr-indicator">
                    <svg
                      width="12"
                      height="12"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <circle cx="18" cy="18" r="3" />
                      <circle cx="6" cy="6" r="3" />
                      <path d="M13 6h3a2 2 0 0 1 2 2v7" />
                      <line x1="6" y1="9" x2="6" y2="21" />
                    </svg>
                    View PR
                  </span>
                </a>
              </li>
            ))}
          </ul>
        </div>
      )
    }

    {/* Notable Contributions - Standard cards */}
    {
      notable.length > 0 && (
        <div class="tier-section notable-section">
          <div class="tier-label notable-label">
            <span class="tier-icon">◆</span>
            Notable
          </div>
          <ul class="contributions-list notable-list">
            {notable.map((contribution) => (
              <li class="contribution-item notable">
                <a
                  class="contribution-link"
                  href={contribution.prLink}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <div class="contribution-header">
                    <h4 class="contribution-title">{contribution.title}</h4>
                    <time class="contribution-date">
                      {new Date(contribution.date).toLocaleDateString(lang, {
                        year: 'numeric',
                        month: 'short',
                      })}
                    </time>
                  </div>
                  <p class="contribution-description">
                    {contribution.description}
                  </p>
                  {contribution.tags && (
                    <div class="contribution-tags">
                      {contribution.tags.slice(0, 3).map((tag) => (
                        <span class="tag">{tag}</span>
                      ))}
                    </div>
                  )}
                </a>
              </li>
            ))}
          </ul>
        </div>
      )
    }

    {/* Minor Contributions - Compact list */}
    {
      minor.length > 0 && (
        <div class="tier-section minor-section">
          <div class="tier-label minor-label">
            <span class="tier-icon">○</span>
            Other ({minor.length})
          </div>
          <ul class="contributions-list minor-list">
            {minor.map((contribution) => (
              <li class="contribution-item minor">
                <a
                  class="contribution-link"
                  href={contribution.prLink}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <span class="minor-bullet">—</span>
                  <span class="contribution-title">{contribution.title}</span>
                  <time class="contribution-date">
                    {new Date(contribution.date).toLocaleDateString(lang, {
                      month: 'short',
                      year: '2-digit',
                    })}
                  </time>
                </a>
              </li>
            ))}
          </ul>
        </div>
      )
    }
  </div>
</article>

<style>
  .project-card {
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    overflow: hidden;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .project-header {
    padding: 1.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .project-title-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    margin-bottom: 0.75rem;
    flex-wrap: wrap;
  }

  .project-name {
    font-family: var(--font-mono);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .name-prefix {
    color: var(--color-primary);
  }

  .project-category {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-secondary);
    background: rgba(88, 166, 255, 0.1);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  .project-description {
    font-size: 0.95rem;
    color: var(--color-text-muted);
    margin: 0 0 1rem 0;
    line-height: 1.5;
  }

  .project-meta {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .tech-stack {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
  }

  .tech-badge {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--color-text-muted);
    background: var(--color-bg-surface);
    border: 1px solid var(--color-border);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
  }

  .project-links {
    display: flex;
    gap: 1rem;
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--color-primary);
    transition: all 0.2s;
  }

  .project-link:hover {
    color: var(--color-text);
  }

  .contribution-summary {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding-top: 0.75rem;
    border-top: 1px solid var(--color-border);
    font-family: var(--font-mono);
    font-size: 0.75rem;
  }

  .summary-total {
    color: var(--color-text-muted);
  }

  .summary-featured {
    color: var(--color-featured);
    background: rgba(210, 168, 255, 0.1);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
  }

  .contributions-container {
    flex: 1;
    overflow-y: auto;
    max-height: 600px;
  }

  .tier-section {
    padding: 1rem 1.5rem;
  }

  .tier-section + .tier-section {
    border-top: 1px solid var(--color-border);
  }

  .tier-label {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-featured);
    margin-bottom: 1rem;
  }

  .notable-label {
    color: var(--color-secondary);
  }

  .minor-label {
    color: var(--color-text-subtle);
  }

  .tier-icon {
    font-size: 0.65rem;
  }

  .contributions-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  /* Featured Items */
  .contribution-item.featured {
    position: relative;
  }

  .contribution-item.featured .contribution-link {
    display: block;
    padding: 1.25rem;
    background: var(--color-bg-surface);
    border: 1px solid var(--color-border);
    border-left: 3px solid var(--color-featured);
    border-radius: 6px;
    transition: all 0.2s var(--ease-out-expo);
    position: relative;
    overflow: hidden;
  }

  .contribution-glow {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(210, 168, 255, 0.05), transparent);
    opacity: 0;
    transition: opacity 0.3s;
    pointer-events: none;
  }

  .contribution-item.featured .contribution-link:hover {
    border-color: var(--color-featured);
    transform: translateX(4px);
  }

  .contribution-item.featured .contribution-link:hover .contribution-glow {
    opacity: 1;
  }

  /* Notable Items */
  .contribution-item.notable .contribution-link {
    display: block;
    padding: 1rem;
    border-radius: 4px;
    border: 1px solid transparent;
    transition: all 0.2s;
  }

  .contribution-item.notable .contribution-link:hover {
    background: var(--color-bg-surface);
    border-color: var(--color-border);
  }

  /* Minor Items */
  .minor-list {
    gap: 0.25rem;
  }

  .contribution-item.minor .contribution-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0;
    font-size: 0.85rem;
    color: var(--color-text-muted);
    transition: color 0.2s;
  }

  .contribution-item.minor .contribution-link:hover {
    color: var(--color-text);
  }

  .contribution-item.minor .contribution-link:hover .minor-bullet {
    color: var(--color-primary);
  }

  .minor-bullet {
    color: var(--color-text-subtle);
    font-family: var(--font-mono);
    transition: color 0.2s;
  }

  .contribution-item.minor .contribution-title {
    flex: 1;
    font-family: var(--font-serif);
    font-weight: 400;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .contribution-item.minor .contribution-date {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--color-text-subtle);
    white-space: nowrap;
  }

  /* Shared Contribution Styles */
  .contribution-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .contribution-title {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
    flex: 1;
  }

  .contribution-date {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-text-subtle);
    white-space: nowrap;
  }

  .contribution-description {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    line-height: 1.5;
    margin: 0 0 0.75rem 0;
  }

  .contribution-impact {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    font-size: 0.8rem;
    color: var(--color-primary);
    background: var(--color-primary-muted);
    padding: 0.5rem 0.75rem;
    border-radius: 4px;
    margin-bottom: 0.75rem;
  }

  .contribution-impact svg {
    flex-shrink: 0;
    margin-top: 2px;
  }

  .contribution-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    margin-bottom: 0.75rem;
  }

  .tag {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    color: var(--color-text-subtle);
    background: var(--color-bg);
    padding: 0.15rem 0.4rem;
    border-radius: 3px;
    border: 1px solid var(--color-border);
  }

  .pr-indicator {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-text-subtle);
    transition: color 0.2s;
  }

  .contribution-link:hover .pr-indicator {
    color: var(--color-featured);
  }

  @media (max-width: 768px) {
    .project-header {
      padding: 1.25rem;
    }

    .tier-section {
      padding: 1rem 1.25rem;
    }

    .contribution-header {
      flex-direction: column;
      gap: 0.25rem;
    }
  }
</style>
