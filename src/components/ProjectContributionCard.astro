---
import type { Project } from '@/data/contributions';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import type { Langs } from '@/i18n/ui';

interface Props {
  project: Project;
  lang?: string;
}

const { project, lang: propLang } = Astro.props;
const lang = (propLang || getLangFromUrl(Astro.url)) as Langs;
const t = useTranslations(lang);
---

<article class="project-card">
  <div class="project-header">
    <div class="project-title-section">
      <h3 class="project-name">{project.name}</h3>
      {
        project.stats?.category && (
          <span class="project-category">{project.stats.category}</span>
        )
      }
    </div>
    <p class="project-description">{project.description}</p>
    <div class="project-meta">
      <div class="tech-stack">
        {
          project.technology.map((tech) => (
            <span class="tech-badge">{tech}</span>
          ))
        }
      </div>
      <div class="project-links">
        <a
          href={project.repository}
          target="_blank"
          rel="noopener noreferrer"
          class="project-link"
          aria-label={`Visit ${project.name} repository`}
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path
              d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"
            ></path>
          </svg>
          {t('contributions.card.repository')}
        </a>
        {
          project.website && project.website !== project.repository && (
            <a
              href={project.website}
              target="_blank"
              rel="noopener noreferrer"
              class="project-link"
              aria-label={`Visit ${project.name} website`}
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="18"
                height="18"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71" />
                <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71" />
              </svg>
              {t('contributions.card.website')}
            </a>
          )
        }
      </div>
    </div>
  </div>

  <div class="contributions-list">
    <div class="contributions-header">
      <h4 class="contributions-title">
        {project.contributions.length}{' '}
        {
          project.contributions.length === 1
            ? t('contributions.card.contributions')
            : t('contributions.card.contributions_plural')
        }
      </h4>
    </div>
    <ul class="contributions">
      {
        project.contributions.map((contribution) => (
          <li class="contribution-item">
            <a
              class="contribution-content"
              href={contribution.prLink}
              target="_blank"
              rel="noopener noreferrer"
              aria-label="View pull request"
            >
              <div class="contribution-header-row">
                <h5 class="contribution-title">{contribution.title}</h5>
                <time class="contribution-date">
                  {new Date(contribution.date).toLocaleDateString(lang, {
                    year: 'numeric',
                    month: 'short',
                  })}
                </time>
              </div>
              <p class="contribution-description">{contribution.description}</p>
              {contribution.impact && (
                <div class="contribution-impact">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="14"
                    height="14"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <polyline points="22 12 18 12 15 21 9 3 6 12 2 12" />
                  </svg>
                  <span>{contribution.impact}</span>
                </div>
              )}
              <div class="contribution-footer">
                {contribution.tags && (
                  <div class="contribution-tags">
                    {contribution.tags.map((tag) => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                )}
                {contribution.prLink && (
                  <span class="pr-link">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="14"
                      height="14"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <circle cx="18" cy="18" r="3" />
                      <circle cx="6" cy="6" r="3" />
                      <path d="M13 6h3a2 2 0 0 1 2 2v7" />
                      <line x1="6" y1="9" x2="6" y2="21" />
                    </svg>
                    {t('contributions.card.viewPR')}
                  </span>
                )}
              </div>
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</article>

<style>
  .project-card {
    background: var(--color-card-bg);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    padding: 2rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(124, 58, 237, 0.12);
    border-color: rgba(124, 58, 237, 0.3);
  }

  .project-header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .project-title-section {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
    flex-wrap: wrap;
  }

  .project-name {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0;
    color: var(--color-text);
  }

  .project-category {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-primary);
    background: rgba(124, 58, 237, 0.1);
    padding: 0.25rem 0.625rem;
    border-radius: 6px;
  }

  .project-description {
    font-size: 0.95rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    margin: 0 0 1.25rem 0;
  }

  .project-meta {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .tech-stack {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-badge {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    background: var(--color-card-bg);
    border: 1px solid var(--color-border);
    padding: 0.25rem 0.75rem;
    border-radius: 6px;
    font-weight: 500;
  }

  .project-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.875rem;
    color: var(--color-primary);
    font-weight: 500;
    transition: all 0.2s;
  }

  .project-link:hover {
    color: var(--color-secondary);
    transform: translateX(2px);
  }

  .project-link svg {
    width: 16px;
    height: 16px;
  }

  .contributions-list {
    flex: 1;
  }

  .contributions-header {
    margin-bottom: 1.25rem;
  }

  .contributions-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
  }

  .contributions {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .contribution-item {
    position: relative;
    padding-left: 1.25rem;
  }

  .contribution-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.5rem;
    width: 6px;
    height: 6px;
    background: var(--color-primary);
    border-radius: 50%;
  }

  .contribution-content {
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
  }

  .contribution-header-row {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
  }

  .contribution-title {
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
    flex: 1;
  }

  .contribution-date {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    white-space: nowrap;
    font-weight: 500;
  }

  .contribution-description {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    margin: 0;
  }

  .contribution-impact {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8rem;
    color: var(--color-accent);
    font-weight: 500;
    background: rgba(37, 99, 235, 0.06);
    padding: 0.5rem 0.75rem;
    border-radius: 6px;
    border-left: 2px solid var(--color-accent);
  }

  .contribution-impact svg {
    flex-shrink: 0;
  }

  .contribution-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .contribution-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
  }

  .tag {
    font-size: 0.7rem;
    color: var(--color-text-muted);
    background: var(--color-card-bg);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    border: 1px solid var(--color-border);
    font-weight: 500;
  }

  .pr-link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.8rem;
    color: var(--color-primary);
    font-weight: 600;
    transition: all 0.2s;
  }

  .pr-link:hover {
    color: var(--color-secondary);
    transform: translateX(2px);
  }

  .pr-link svg {
    width: 14px;
    height: 14px;
  }

  @media (max-width: 768px) {
    .project-card {
      padding: 1.5rem;
    }

    .project-name {
      font-size: 1.25rem;
    }

    .contribution-header-row {
      flex-direction: column;
      gap: 0.375rem;
    }

    .contribution-date {
      align-self: flex-start;
    }
  }
</style>
