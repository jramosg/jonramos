---
import ArrowRight from '@/assets/arrow-right.svg';
import TechIcon from './TechIcon.astro';

interface Props {
  title: string;
  description: string;
  href: string;
  tags: string[];
}

const { title, description, href, tags } = Astro.props;
---

<article class="card">
  <a
    href={href}
    target="_blank"
    rel="noopener noreferrer"
    class="card-link"
    aria-label={`View ${title} project (opens in new tab)`}
  >
    <div class="card-content">
      <h3 class="title" itemprop="name">
        <span>{title}</span>
        <ArrowRight class="arrow" aria-hidden="true" />
      </h3>
      <p class="description" itemprop="description">
        {description}
      </p>
      <meta itemprop="url" content={href} />
      <ul class="tags" aria-label="Technologies used" itemprop="keywords">
        {
          tags.map((tag) => (
            <li class="tag">
              <TechIcon tech={tag} />
              <span class="tag-text">{tag}</span>
            </li>
          ))
        }
      </ul>
    </div>
  </a>
</article>

<style>
  .card {
    display: block;
    position: relative;
    background: var(--color-card-bg);
    border: 1px solid var(--color-border);
    border-radius: 1.25rem;
    transition: all 0.3s ease;
    height: 100%;
  }

  .card-link {
    display: block;
    padding: 2rem;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  .card:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: var(--color-text);
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3);
  }

  .card-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    height: 100%;
  }

  .title {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0;
    color: var(--color-text);
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .arrow {
    width: 32px;
    height: 32px;
    flex-shrink: 0;
    transition: transform 0.3s ease;
    color: var(--color-primary);
  }

  .card:hover .arrow {
    transform: translateX(4px);
  }

  p {
    margin: 0 0 1.5rem 0;
    color: var(--color-text-muted);
    line-height: 1.6;
    margin: 0;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: auto;
    align-items: center;
    list-style: none;
    padding: 0;
  }

  .tag {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.375rem 0.75rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    font-size: 0.8rem;
    font-weight: 500;
    color: var(--color-text-muted);
    transition: all 0.2s;
    height: 30px;
  }

  .card:hover .tag {
    background: rgba(255, 255, 255, 0.08);
    border-color: var(--color-text-muted);
  }

  .tag-text {
    line-height: 1;
  }
</style>
