---
import TechIcon from './TechIcon.astro';

interface Props {
  title: string;
  description: string;
  href: string;
  tags: string[];
}

const { title, description, href, tags } = Astro.props;
---

<article class="card">
  <a
    href={href}
    target="_blank"
    rel="noopener noreferrer"
    class="card-link"
    aria-label={`View ${title} project (opens in new tab)`}
  >
    <div class="card-content">
      <div class="card-header">
        <span class="project-index">//</span>
        <h3 class="title" itemprop="name">{title}</h3>
        <span class="arrow-icon">
          <svg
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <line x1="7" y1="17" x2="17" y2="7"></line>
            <polyline points="7 7 17 7 17 17"></polyline>
          </svg>
        </span>
      </div>

      <p class="description" itemprop="description">
        {description}
      </p>

      <meta itemprop="url" content={href} />

      <ul class="tags" aria-label="Technologies used" itemprop="keywords">
        {
          tags.map((tag) => (
            <li class="tag">
              <TechIcon tech={tag} />
              <span class="tag-text">{tag}</span>
            </li>
          ))
        }
      </ul>
    </div>
  </a>
</article>

<style>
  .card {
    display: block;
    position: relative;
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    transition: all 0.25s var(--ease-out-expo);
    height: 100%;
  }

  .card-link {
    display: block;
    padding: 1.5rem;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  .card:hover {
    border-color: var(--color-primary);
    transform: translateY(-2px);
  }

  .card-content {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    height: 100%;
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .project-index {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    color: var(--color-primary);
    font-weight: 400;
  }

  .title {
    font-family: var(--font-mono);
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0;
    color: var(--color-text);
    flex: 1;
  }

  .arrow-icon {
    color: var(--color-text-subtle);
    opacity: 0;
    transform: translateX(-4px);
    transition: all 0.25s var(--ease-out-expo);
  }

  .card:hover .arrow-icon {
    opacity: 1;
    transform: translateX(0);
    color: var(--color-primary);
  }

  .description {
    font-size: 0.95rem;
    margin: 0;
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    margin-top: auto;
    padding-top: 0.75rem;
    align-items: center;
    list-style: none;
    padding-left: 0;
    border-top: 1px solid var(--color-border);
  }

  .tag {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.25rem 0.5rem;
    background: var(--color-bg-surface);
    border: 1px solid var(--color-border);
    border-radius: 4px;
    font-family: var(--font-mono);
    font-size: 0.7rem;
    font-weight: 500;
    color: var(--color-text-muted);
    transition: all 0.2s;
  }

  .card:hover .tag {
    border-color: var(--color-border-emphasis);
  }

  .tag-text {
    line-height: 1;
  }
</style>
