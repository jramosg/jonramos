{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*", "react-email/**/*.tsx"],
  "exclude": ["dist"],
  "strictNullChecks": true,
  "allowJs": true,
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@mail/*": ["react-email/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
